---
import Layout from '../layouts/Layout.astro';
import ProjectsModal from '../components/ProjectsModal.astro';

const posts = (await Astro.glob('./posts/*.{md,mdx}'))
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());
---

<Layout title="PAULLM - AI Experiments & Projects">
  <div class="hero">
    <h1>ðŸ¤– Hey there! ðŸ‘‹</h1>
    <p class="intro">I'm Paul and I had to buy this domain to host other things. Lucky you...</p>
    <div class="hero-links">
      <a href="https://chat.latentspaceai.com" class="cta-button">Try the Bots</a>
      <a href="/projects" class="cta-button secondary">View Projects</a>
    </div>
  </div>

  <section class="featured">
    <h2>Projects</h2>
    <div class="project-grid">
      <div class="project-card">
        <div class="project-content">
          <h3>AI Experiments</h3>
          <p>Research and experiments in artificial intelligence.</p>
          <a href="/projects" class="learn-more">View Projects â†’</a>
        </div>
      </div>
      <div class="project-card">
        <div class="project-content">
          <h3>Chatbots</h3>
          <p>A collection of AI chatbots and interfaces.</p>
          <a href="https://chat.latentspaceai.com" class="learn-more">Try Them â†’</a>
        </div>
      </div>
      <div class="project-card">
        <div class="project-content">
          <h3>Tools I Love</h3>
          <p>Essential tools that make development better.</p>
          <a href="/projects" class="learn-more">Explore â†’</a>
        </div>
      </div>
    </div>
  </section>
  
  <section class="posts">
    <h2>Posts</h2>
    <div class="posts-grid">
      {posts.map(post => (
        <article class="post-card">
          <a href={post.url}>
            <div class="post-content">
              <div class="post-meta">
                <time datetime={post.frontmatter.date}>
                  {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              <h3>{post.frontmatter.title}</h3>
              <p>{post.frontmatter.description}</p>
              <span class="read-more">Read More â†’</span>
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>

  <ProjectsModal />
</Layout>

<style>
  .hero {
    margin: 4rem 0 6rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0;
    background: linear-gradient(45deg, var(--accent-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient 8s ease infinite;
  }
  
  .intro {
    font-size: 1.2rem;
    color: var(--text-color);
    opacity: 0.8;
    margin: 1.5rem auto;
    max-width: 600px;
    line-height: 1.6;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.8rem 1.6rem;
    border-radius: 4px;
    background: var(--accent-color);
    color: var(--bg-color);
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      var(--secondary-color),
      transparent
    );
    transform: translateX(-100%);
  }

  .cta-button:hover::after {
    animation: shine 1.5s ease-in-out;
  }

  .cta-button:hover {
    transform: translateY(-2px);
  }

  .cta-button.secondary {
    background: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
  }

  .featured {
    margin: 6rem 0;
  }

  .featured h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 1.5rem;
    color: var(--accent-color);
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: var(--card-bg);
    border: 1px solid var(--accent-color);
    border-opacity: 0.1;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-color);
    box-shadow: 0 4px 20px var(--card-bg);
  }

  .project-content {
    padding: 2rem;
  }

  .project-content h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--accent-color);
  }

  .project-content p {
    margin: 1rem 0;
    opacity: 0.8;
    font-size: 0.9rem;
  }

  .learn-more {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--accent-color);
    position: relative;
  }

  .learn-more::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--accent-color);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: right;
  }

  .learn-more:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  .posts {
    margin: 6rem 0;
  }
  
  .posts h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 1.5rem;
    color: var(--accent-color);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .post-card {
    background: var(--card-bg);
    border: 1px solid var(--accent-color);
    border-opacity: 0.1;
    border-radius: 8px;
    transition: all 0.3s ease;
    height: 100%;
  }
  
  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-color);
    box-shadow: 0 4px 20px var(--card-bg);
  }
  
  .post-card a {
    display: block;
    height: 100%;
    color: inherit;
    text-decoration: none;
  }
  
  .post-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .post-meta {
    margin-bottom: 1rem;
  }
  
  .post-meta time {
    font-size: 0.8rem;
    color: var(--accent-color);
    opacity: 0.8;
    font-weight: 500;
  }
  
  .post-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.4rem;
    color: var(--accent-color);
    line-height: 1.3;
  }
  
  .post-card p {
    margin: 0;
    font-size: 0.95rem;
    opacity: 0.8;
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .read-more {
    display: inline-block;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: var(--accent-color);
    font-weight: 500;
    transition: transform 0.3s ease;
  }
  
  .post-card:hover .read-more {
    transform: translateX(8px);
  }

  @media (max-width: 768px) {
    .hero {
      margin: 2rem 0 4rem;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .project-grid, .posts-grid {
      grid-template-columns: 1fr;
    }

    .hero-links {
      flex-direction: column;
      padding: 0 2rem;
    }

    .cta-button {
      width: 100%;
      text-align: center;
    }
    
    .post-content {
      padding: 1.5rem;
    }
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes shine {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
</style>