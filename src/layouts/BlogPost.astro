---
import Layout from './Layout.astro';
import ProjectsModal from '../components/ProjectsModal.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="blog-post">
    <header>
      <h1>{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.date}>
          {new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>
      <p class="description">{frontmatter.description}</p>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
  <ProjectsModal />
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--accent-color);
    border-opacity: 0.1;
    border-radius: 8px;
  }

  header {
    margin-bottom: 1.5rem;
    text-align: center;
  }

  h1 {
    font-size: 1.75rem;
    color: var(--accent-color);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .post-meta {
    margin-bottom: 0.75rem;
  }

  time {
    font-size: 0.8rem;
    color: var(--accent-color);
    opacity: 0.8;
    font-weight: 500;
  }

  .description {
    font-size: 0.9rem;
    opacity: 0.8;
    line-height: 1.4;
    margin: 0;
  }

  .content {
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .content :global(h1) {
    font-size: 1.5rem;
    margin: 1.25rem 0 0.75rem;
    color: var(--accent-color);
  }

  .content :global(h2) {
    font-size: 1.25rem;
    margin: 1rem 0 0.5rem;
    color: var(--accent-color);
  }

  .content :global(h3) {
    font-size: 1.1rem;
    margin: 0.75rem 0 0.5rem;
    color: var(--accent-color);
  }

  .content :global(p) {
    margin: 0.5rem 0;
  }

  .content :global(ul), .content :global(ol) {
    margin: 0.5rem 0;
    padding-left: 1.25rem;
  }

  .content :global(li) {
    margin: 0.25rem 0;
  }

  .content :global(a) {
    color: var(--accent-color);
    text-decoration: none;
    border-bottom: 1px solid var(--accent-color);
    transition: opacity 0.2s ease;
  }

  .content :global(a:hover) {
    opacity: 0.8;
  }

  .content :global(code) {
    background: var(--card-bg);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.8em;
    border: 1px solid var(--accent-color);
    border-opacity: 0.1;
  }

  .content :global(pre) {
    background: var(--card-bg);
    padding: 0.75rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid var(--accent-color);
    border-opacity: 0.1;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
  }

  .content :global(blockquote) {
    margin: 1rem 0;
    padding: 0.5rem 1rem;
    border-left: 4px solid var(--accent-color);
    background: var(--card-bg);
    font-style: italic;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 1rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .description {
      font-size: 0.85rem;
    }

    .content {
      font-size: 0.85rem;
    }
  }
</style>